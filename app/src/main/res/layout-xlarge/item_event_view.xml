<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/event_img"
            android:layout_width="150dp"
            android:layout_margin="15dp"
            android:layout_height="150dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <company.override.huzykamz.pixsar.customization.Francois
                android:text="Event Name"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textAllCaps="true"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="#560f63"
                android:layout_marginLeft="15dp"

                android:padding="40dp"

                android:id="@+id/item_eventname_txt" />

            <TableRow
                android:id="@+id/tb2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                    android:text="EVENT LOCATION :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:padding="40dp" android:gravity="center"/>

                <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                    android:id="@+id/item_eventlocation_txt"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:text="date_place"
                    android:textStyle="italic|bold"
                    android:padding="40dp" android:gravity="center"/>


            </TableRow>


        </LinearLayout>
    </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/grayColor"
            />

        <company.override.huzykamz.pixsar.customization.Lobster
            android:text="Event Type"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_eventlocation_txt"
            android:textStyle="bold|italic"
            android:textAllCaps="true"
            android:padding="40dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textColor="#0c0748"
            android:gravity="end"
            android:id="@+id/item_event_type_txt" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/grayColor"
            />
        <TableRow
            android:id="@+id/tb1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                android:text="DATE  :"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:textColor="#000"
                android:padding="40dp" android:gravity="center"/>

            <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                android:id="@+id/date_event_txt"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="#6b2b00"
                android:text="date_place"
                android:textAllCaps="true"
                android:textStyle="italic|bold"
                android:padding="40dp" android:gravity="center"/>


        </TableRow>

    </LinearLayout>
</android.support.v7.widget.CardView>