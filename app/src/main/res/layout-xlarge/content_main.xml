<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#231b26"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="company.override.huzykamz.pixsar.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        />
    <!-- <android.support.v7.widget.RecyclerView
         android:layout_width="fill_parent"
         android:id="@+id/mRecyclerview_main"
         android:layout_height="fill_parent"

         />-->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:onClick="OnWedding"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    app:cardBackgroundColor="#efe6e6"
                    android:src="@drawable/glass_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="14dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="30dp"
                        android:src="@mipmap/wedding_main"
                        />
                    <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Wedding Parties"
                         android:textSize="30sp"
                        android:textColor="#000000"
                        android:textStyle="bold|italic"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="right"
                        android:layout_marginLeft="70dp"
                        android:layout_margin="30dp"
                        android:src="@mipmap/next"
                        />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:onClick="OnIntroduction"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    app:cardBackgroundColor="#efe6e6"
                    android:src="@drawable/glass_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="14dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="30dp"
                        android:src="@mipmap/introduction_main"
                        />
                    <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Introduction Parties"
                         android:textSize="30sp"
                        android:textColor="#000000"
                        android:textStyle="bold|italic"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="70dp"
                            android:layout_margin="30dp"
                            android:src="@mipmap/next"
                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:onClick="OnGraduation"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    app:cardBackgroundColor="#efe6e6"
                    android:src="@drawable/glass_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="14dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="30dp"
                        android:src="@mipmap/graduation_main"
                        />
                    <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Graduation Parties"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:textStyle="bold|italic"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="70dp"
                            android:layout_margin="30dp"
                            android:src="@mipmap/next"
                            />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:onClick="OnBirthday"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_height="wrap_content">
                <ImageView
                    app:cardBackgroundColor="#efe6e6"
                    android:src="@drawable/glass_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="14dp"
                        android:background="@color/colorPrimary"
                        android:layout_height="match_parent"
                        />
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="30dp"
                        android:src="@mipmap/birthday_main"
                        />
                    <company.override.huzykamz.pixsar.customization.FjallaOneRegular
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:text="Birthday Parties"
                        android:textSize="30sp"
                        android:textColor="#000000"
                        android:textStyle="bold|italic"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="right"
                            android:layout_marginLeft="70dp"
                            android:layout_margin="30dp"
                            android:src="@mipmap/next"
                            />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
